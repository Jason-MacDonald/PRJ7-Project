@page "/myprojects"
@inject NavigationManager navigationManager
@inject IAdventureRepository adventureRepository

<AdventureFilter />
<AdventureList Adventures="adventures" ProjectContext="@true"/>

@code {
    private List<Adventure> adventures;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            adventures = await adventureRepository.GetAdventures();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }

    private void NavCreateProject()
    {
        navigationManager.NavigateTo($"createproject");
    }
}
