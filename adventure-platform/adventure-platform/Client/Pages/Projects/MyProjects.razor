@page "/myprojects"
@inject NavigationManager navigationManager
@inject IAdventureRepository adventureRepository

<h3>MyProjects</h3>

<button class="btn btn-primary" @onclick="NavCreateProject">Create New Project</button>

<div>
    <AdventureList Adventures="adventures" />
</div>

@code {
    private List<Adventure> adventures;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            adventures = await adventureRepository.GetAdventures();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }

    private void NavCreateProject()
    {
        navigationManager.NavigateTo($"createproject");
    }
}
