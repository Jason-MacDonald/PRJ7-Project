@if (display)
{

@* BACKGROUND EFFECT *@
<div class="modal-backdrop show" />

@* MODAL *@
<div class="modal fade show" 
     id="confirmModal" 
     tabindex="-1"
     role="dialog"
     aria-hidden="true"
     style="display: block">

    <div class="modal-dialog" role="document">
        <div class="modal-content">

            @*MODAL HEADER*@
            <div class="modal-header">
                
                @* Title *@
                <h5 class="modal-title">@Title</h5>

                @* Close Button *@
                <button @onclick="OnCancel" type="button" class="close">
                    <span aria-hidden="true">&times</span>
                </button>

            </div>

            @* MODAL BODY *@
            <div class="modal-body">
                @ChildContent
            </div>

            @* MODAL FOOTER *@
            <div class="modal-footer">

                @* Cancel Button *@
                <button @onclick="OnCancel" type="button" class="btn btn-secondary">
                    Cancel
                </button>

                @* Confirm Button *@
                <button @onclick="OnConfirm" type="button" class="btn btn-primary">
                    Confirm
                </button>

            </div>

        </div>
    </div>

</div>
}

@code {

    #region ##### HEAD #####

    [Parameter] public string Title { get; set; } = "Confirm";
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private bool display = false;

    #endregion

    #region ##### GENERAL METHODS #####

    public void Show() => display = true;
    public void Hide() => display = false;

    #endregion

}
